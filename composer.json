  "require": {
    "ext-fileinfo": "*",
    "ext-gd": "*",
    "ext-imagick": "*",
    "aircms/core": "dev-main",
    "ralouphie/mimey": "*",
    "php-ffmpeg/php-ffmpeg": "*"
